import java.util.Scanner;

public class Ejercicio5 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Cantidad de productos: ");
        int n = sc.nextInt();
        sc.nextLine();

        double[] PU = new double[n];
        int[] CC = new int[n];
        String[] desc = new String[n];
        double[] TG = new double[n];

        double totalGeneral = 0;
        int indiceMayor = 0;

        for(int i=0;i<n;i++){
            System.out.print("DescripciÃ³n: ");
            desc[i]=sc.nextLine();
            System.out.print("Precio unitario: ");
            PU[i]=sc.nextDouble();
            System.out.print("Cantidad: ");
            CC[i]=sc.nextInt();
            sc.nextLine();

            TG[i]=PU[i]*CC[i];
            totalGeneral+=TG[i];

            if(TG[i]>TG[indiceMayor])
                indiceMayor=i;
        }

        System.out.println("Total general: "+totalGeneral);
        System.out.println("Mayor gasto: "+desc[indiceMayor]+" Total: "+TG[indiceMayor]);
    }
}
